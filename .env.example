# AI Provider Configuration
USE_DEEPSEEK="False"  # Set to "True" to use DeepSeek instead of OpenAI

# OpenAI Configuration (Default)
OPENAI_API_KEY="your_openai_api_key_here"

# DeepSeek Configuration (Optional)
DEEPSEEK_API_KEY="your_deepseek_api_key_here"

# Reddit API Configuration
REDDIT_USERNAME="your_reddit_username"
REDDIT_PASSWORD="your_reddit_password"
REDDIT_CLIENT_ID="your_client_id_here"
REDDIT_CLIENT_SECRET="your_client_secret_here"
REDDIT_USER_AGENT="your_user_agent_here"

# Optional Configuration
DATABASE_PATH="reddit_bot.db"  # Path to SQLite database
DEBUG_MODE="False"             # Enable debug logging

# Database Configuration
DB_PATH=reddit_bot.db

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=bot.log

# Platform Rate Limits (optional, will use config.json if not set)
REDDIT_POSTS_PER_HOUR=2
REDDIT_COMMENTS_PER_HOUR=5
ELIZA_MESSAGES_PER_MINUTE=10

# Platform-Specific Settings
ELIZA_SESSION_TIMEOUT=300
ELIZA_MAX_MESSAGE_LENGTH=500

# Development Settings
DEBUG=false
TESTING=false 